{
  "name": "packpal-server",
  "version": "1.0.0",
  "description": "Backend server for PackPal - a group travel packing organization app",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "db:create": "node src/db/createDb.js",
    "db:generate": "drizzle-kit generate --dialect postgresql --schema src/db/schema.js --out src/db/migrations",
    "db:migrate": "node src/db/migrate.js",
    "db:studio": "drizzle-kit studio --port 3100",
    "db:init": "node src/db/init-database.js",
    "db:reset": "node src/db/initialize.js",
    "db:full-init": "node src/db/init-script.js",
    "db:fresh": "node -e \"require('./src/db/initialize').initializeDatabase().then(() => process.exit(0)).catch(err => { console.error(err); process.exit(1); })\"",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "travel",
    "packing",
    "group",
    "organization"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/pg": "^8.11.11",
    "bcrypt": "^5.1.1",
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "drizzle-kit": "^0.30.6",
    "drizzle-orm": "^0.41.0",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.10.0",
    "pdfkit": "^0.14.0",
    "pg": "^8.14.1",
    "socket.io": "^4.7.2",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.2"
  }
}
